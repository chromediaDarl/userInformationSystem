{# src/UserManagement/UserMgtBundle/Resources/views/Default/changepass.html.twig #}
{% extends 'UserManagementUserMgtBundle::layout.html.twig' %}
{% block body %}
<div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          {% include 'UserManagementUserMgtBundle::mainnav.html.twig' %}

          <div class="inner cover">
            <h1 class="cover-heading">
              {% block title %}Change Password{% endblock %}
            </h1>
            <form action="{{ path('changepass') }}" method="post" {{ form_enctype(form) }} class="form-signup" role="form">
            	{% for flashMessage in app.session.flashbag.get('alert-danger') %}
      					<div class="alert alert-danger" role="alert">
      					{{ flashMessage }}
      					</div> 
      				{% endfor %}
              {% for flashMessage in app.session.flashbag.get('alert-success') %}
                <div class="alert alert-success" role="alert">
                {{ flashMessage }}
                </div> 
              {% endfor %}
      				{{ form_errors(form) }}

              {% block form_row %}
                  {% spaceless %}
                      <div class="form-group{% if form_errors(form.password) %} has-error{% else %} has-success{% endif %} has-feedback">
                          {{ form_widget(form.password) }}
                          {% if form_errors(form.password) %}
                            <span class="help-block">{{ form_errors(form.password) }}</span>
                            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                          {% endif %}
                      </div>

                      <div class="form-group{% if form_errors(form.newpassword) %} has-error{% else %} has-success{% endif %} has-feedback">
                          {{ form_widget(form.newpassword) }}
                          {% if form_errors(form.newpassword) %}
                            <span class="help-block">{{ form_errors(form.newpassword) }}</span>
                            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                          {% endif %}
                      </div>

                      <div class="form-group{% if form_errors(form.newpassword) %} has-error{% else %} has-success{% endif %} has-feedback">
                          {{ form_widget(form.connewpassword) }}
                          {% if form_errors(form.newpassword) %}
                            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                          {% endif %}
                      </div>
                  {% endspaceless %}
              {% endblock form_row %}
			    
			    {{ form_rest(form) }}
			    {#
			        If you want to control the URL the user
			        is redirected to on success (more details below)
			        <input type="hidden" name="_target_path" value="/account" />
			    #}
			    <button class="btn btn-lg btn-warning btn-block" type="submit">Update Password</button>
			</form>
          </div>

          <div class="mastfoot">
            <div class="inner">
              <p>Cover template for <a href="http://getbootstrap.com">Bootstrap</a>, by <a href="https://twitter.com/mdo">@mdo</a>.</p>
            </div>
          </div>

        </div>

      </div>

    </div>
{% endblock %}