{# src/UserManagement/UserMgtBundle/Resources/views/Default/profile.html.twig #}
{% extends 'UserManagementUserMgtBundle::layout.html.twig' %}
{% block body %}
<div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          {% include 'UserManagementUserMgtBundle::mainnav.html.twig' %}

          <div class="inner cover">
            <h1 class="cover-heading">
              {% block title %}Your Profile{% endblock %}
            </h1>
            <div class="msg-section">
              {% for flashMessage in app.session.flashbag.get('alert-danger') %}
                <div class="alert alert-danger" role="alert">
                {{ flashMessage }}
                </div> 
              {% endfor %}
              {% for flashMessage in app.session.flashbag.get('alert-success') %}
                <div class="alert alert-success" role="alert">
                {{ flashMessage }}
                </div> 
              {% endfor %}
              <input type="text" name="email" class="form-control" value="{{ user.email }}" readonly="readonly" />
            </div>
            <div id="profile">
            <form action="{{ path('profile') }}" method="post" {{ form_enctype(form) }} class="form-signup" role="form">
				{{ form_errors(form) }}
			    {{ form_row(form.fname) }}
				  {{ form_row(form.lname) }}
			    
			    {{ form_rest(form) }}
			    {#
			        If you want to control the URL the user
			        is redirected to on success (more details below)
			        <input type="hidden" name="_target_path" value="/account" />
			    #}
			    <button class="btn btn-lg btn-warning btn-block" name="profile" type="submit">Update Profile</button>
			    <p class="space">
				    <a href="change-password"><span class="f-right">Want to change your password?</span></a>
				</p>
			</form>
      </div>
          </div>

          <div class="mastfoot">
            <div class="inner">
              <p>Cover template for <a href="http://getbootstrap.com">Bootstrap</a>, by <a href="https://twitter.com/mdo">@mdo</a>.</p>
            </div>
          </div>

        </div>

      </div>

    </div>
{% endblock %}