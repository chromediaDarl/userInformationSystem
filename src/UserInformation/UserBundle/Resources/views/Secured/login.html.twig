{# src/UserInformation/UserBundle/Resources/views/Secured/login.html.twig #}
{% extends 'UserInformationUserBundle::loginlayout.html.twig' %}

{% block body %}
    <div class="container">

      <form class="form-signin" role="form">
        <h2 class="form-signin-heading">Please sign in</h2>
        <input type="email" class="form-control" placeholder="Email address" required autofocus>
        <input type="password" class="form-control" placeholder="Password" required>
        <label class="checkbox">
          <input type="checkbox" value="remember-me"> Remember me
        </label>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>

      {% if error %}
          <div>{{ error.message }}</div>
      {% endif %}

      <form class="form-signin" role="form" action="{{ path('login_check') }}" method="post">
          <h2 class="form-signin-heading">Please sign in</h2>
          <input type="email" class="form-control" id="email" name="email" value="{{ last_email }}" placeholder="Email address" required autofocus>
          <input type="password" class="form-control" id="password" name="_password" placeholder="Password" required>

          {#
              If you want to control the URL the user
              is redirected to on success (more details below)
              <input type="hidden" name="_target_path" value="/account" />
          #}
          <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>
    </div> <!-- /container -->
{% endblock %}